<%- include("./partials/head.ejs", {title: "Series", dark}) %>

<%- include("./partials/nav.ejs") %>

<main>
	<div id="top_right">
		<%- include("./partials/search.ejs") %>
		<%- include("./partials/art.ejs") %>
	</div>
	
	<h2>Series</h2>
	
	<p class="tagline">Individually horrible articles, combined.</p>
	
	<div class="series card-grid scaled-3">
		<% for (const s of Object.keys(series)) { %>
			<a href="/series/<%= s.toLowerCase().replace(/ /g, '-') %>" class="card">
				<div class="body">
					<h3 class="title"><%= s %></h3>

					<p class="excerpt"><%- series[s].description %></p>
				</div>
			</a>
		<% } %>
	</div>
</main>

<%- include("./partials/footer.ejs") %>
