<%- include("./partials/head.ejs", {title: "Topics", dark}) %>

<%- include("./partials/nav.ejs") %>

<main>
	<div id="top_right">
		<%- include("./partials/search.ejs") %>
		<%- include("./partials/art.ejs") %>
	</div>
	
	<h2>Topics</h2>
	
	<p class="tagline">Take a deep dive into our stupid opinions.</p>
	
	<div class="topics card-grid scaled-3">
		<% for (const s of topics) { %>
			<a href="/topic/<%= s %>" class="card">
				<div class="body">
					<h3 class="title"><%= slugToTitle(s) %></h3>
				</div>
			</a>
		<% } %>
	</div>
</main>

